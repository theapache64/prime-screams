<idea-plugin>
    <id>com.github.theapache64.primescreams</id>
    <name>Prime Screams</name>
    <vendor email="theapache64@gmail.com">theapache64</vendor>

    <description><![CDATA[
    Plays <a href="https://www.youtube.com/watch?v=kkcHypEr5y8">Prime Screams</a> when you use not-null assertion operator <em>!!</em> in Kotlin code.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <editorFactoryDocumentListener implementation="com.github.theapache64.primescreams.PrimeScreamsListener"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
